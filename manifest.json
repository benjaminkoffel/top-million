{
  "manifest_version": 2,
  "name": "Top Million",
  "description": "Restrict requests to the million most visited sites.",
  "version": "1.0",
  "icons": {
    "48": "globe.svg",
    "96": "globe.svg"
  },
  "applications": {
    "gecko": {
      "id": "topmillion@benjaminkoffel",
      "strict_min_version": "57.0"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "permissions": [
    "proxy", 
    "storage"
  ]
}